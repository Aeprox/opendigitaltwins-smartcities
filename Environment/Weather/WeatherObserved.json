{
    
    "@id": "dtmi:ngsild:city:WeatherObserved;1",
    "@type": "Interface",
    "@context" : "dtmi:dtdl:context;2",
    "extends": "dtmi:ngsild:city:EnvironmentBaseModel;1",
    "displayName": "WeatherObserved",
    "contents":[
        {
            "@type" : "property",
            "name": "weatherType",
            "schema": "string",
            "writable": true
        },
        {
            "@type" : "property",
            "name": "stationCode",
            "schema": "string",
            "writable": true
        },
        {
            "@type" : "property",
            "name": "stationName",
            "schema": "string",
            "writable": true
        },
        {
            "@type": "Property",
            "name": "pressureTendency",
            "schema": 
            {
                "@type": "Enum",
                "valueSchema": "integer",
                "enumValues": [
                    {
                        "name": "raising",
                        "displayName": "Raising",
                        "enumValue": 1
                    },
                    {
                        "name": "steady",
                        "displayName": "Steady",
                        "enumValue": 2
                    },
                    {
                        "name": "falling",
                        "displayName": "Falling",
                        "enumValue": 3
                    }
                ]
            }
        },
        {
            "@type" : ["Telemetry","PressureUnit"],
            "name": "atmosphericPressure",
            "schema": "double",
            "unit": "hectoPascal" 
        },
        {
            "@type" : ["Telemetry","TemperatureUnit"],
            "name": "dewpoint",
            "schema": "double",
            "unit": "degreeCelsius"
        },
        {
            "@type" : ["Telemetry","TemperatureUnit"],
            "name": "FeelsLikeTemperature",
            "schema": "double",
            "unit": "degreeCelsius"
        },
        {
            "@type" : ["Telemetry","TemperatureUnit"],
            "name": "temperature",
            "schema": "double",
            "unit": "degreeCelsius"
        },
        {
            "@type" : ["Telemetry","IlluminanceUnit"],
            "name": "illuminance",
            "schema": "double",
            "unit": "lux"
        },
        {
            "@type" : ["Telemetry","VolumeFlowRateUnit"],
            "name": "precipitation",
            "schema": "double",
            "unit": "litrePerSquareMetre"
        },
        {
            "@type" : ["Telemetry"],
            "name": "relativeHumidity",
            "schema": "double"
        },
        {
            "@type" : ["Telemetry","LengthUnit"],
            "name": "snowHeight",
            "schema": "double",
            "unit": "centimetre"
        },
        {
            "@type" : ["Telemetry","energyUnit"],
            "name": "solarRadiation",
            "schema": "double",
            "unit": "wattPerSquareMetre"
        },
        {
            "@type" : ["Telemetry","LengthUnit"],
            "name": "streamGauge",
            "schema": "double",
            "unit": "centimetre"
        },
        {
            "@type" : ["Telemetry"],
            "name": "uVIndexMax",
            "schema": "double"
        },
        {
            "@type" : ["Telemetry","LengthUnit"],
            "name": "visibility",
            "schema": "double",
            "unit": "metre"
        },
        {
            "@type" : ["Telemetry","AngleUnit"],
            "name": "WindDirection",
            "schema": "double",
            "unit": "degreeOfArc" 
        },
        {
            "@type" : ["Telemetry","VelocityUnit"],
            "name": "WindSpeed",
            "schema": "double",
            "unit": "knot" 
        },
        { 
            "@type": "Relationship",
            "name": "refDevice",
            "minMultiplicity": 0,
            "maxMultiplicity": 1,
            "target": "dtmi:ngsild:city:device;1"	
        },
        { 
            "@type": "Relationship",
            "name": "refPointOfInterest",
            "minMultiplicity": 0,
            "maxMultiplicity": 1,
            "target": "dtmi:ngsild:city:pointOfInterest;1"	
        }
    ]
}