{
  "@id": "dtmi::ngsild:city:StreetlightGroup;1",
  "@type": "Interface",
  "displayName": "StreetlightGroup",
  "extends" : "dtmi:ngsild:city:NGSILDBaseModel;1",
  "contents": [
     
    {
      "@type": "Relationship",
      "name": "refStreetLight",
      "description": "Relationship. List of streetlight entities belonging to this group. List of references to entities fo type Streetlight. Allowed values: There must topographical integrity between the location of the group and of the individual streetlights.",
      "target": "dtmi:ngsild:city:Streetlight;1"
    },
    {
      "@type": "Relationship",
      "name": "refStreetlightControlCabinet",
      "description": "Streetlight group's control cabinet",
      "schema": "dtmi:ngsild:city:StreetlightControlCabinet:1"
    },
    {
      "@type": "Property",
      "name": "powerState",
      "description": "Streetlight group's power state. Enum:'on, off, low, bootingUp'.",
      "schema": {
        "@type": "Enum",
        "valueSchema": "integer",
        "enumValues": [
          {
            "name": "on",
            "displayName": "ON",
            "enumValue": 1
          },
          {
            "name": "off",
            "displayName": "OFF",
            "enumValue": 2
          },
          {
            "name": "low",
            "displayName": "LOW",
            "enumValue": 3
          },
          {
            "name": "bootingUp",
            "displayName": "BootingUp",
            "enumValue": 4
          }
        ]
      },
      "writable": true
    },
    {
      "@type": "Property",
      "name": "dateLastSwitchingOn",
      "writable": true,
      "schema": "dateTime"
    },
    {
      "@type": "Property",
      "name": "dateLastSwitchingOff",
      "writable": true,
      "schema": "dateTime"
    },
    {
      "@type": "Property",
      "name": "switchingOnHours",
      "schema": {
        "@type": "Object",
        "fields": [
          {
            "name": "from",
            "schema": "string"
          },
          {
            "name": "to",
            "schema": "string"
          },
          {
            "name": "hours",
            "schema": "string"
          }
        ]

      },
      "writable": true
    },
    {
      "@type": "Property",
      "name": "switchingMode",
      "schema": {
        "@type": "Enum",
        "valueSchema": "integer",
        "enumValues": [
          {
            "name": "night-ON",
            "displayName": "night-ON",
            "enumValue": 1
          },
          {
            "name": "night-OFF",
            "displayName": "night-OFF",
            "enumValue": 2
          },
          {
            "name": "night-LOW",
            "displayName": "night-LOW",
            "enumValue": 3
          },
          {
            "name": "always-ON",
            "displayName": "always-ON",
            "enumValue": 4
          },
          {
            "name": "day-ON",
            "displayName": "day-ON",
            "enumValue": 5
          },
          {
            "name": "day-OFF",
            "displayName": "day-OFF",
            "enumValue": 6
          },
          {
            "name": "day-LOW",
            "displayName": "day-LOW",
            "enumValue": 7
          }
        ]
      },
      "writable": true

    },
    {
      "@type": "Property",
      "name": "illuminanceLevel",
      "description": "Relative illuminance level setting for the group. Allowed values: A number between 0 and 1.",
      "writable": true,
      "schema": "double",
      "minimum": 0,
      "maximum": 1
    },
    {
      "@type": "Property",
      "name": "activeProgramId",
      "description": "Identifier of the active program for this streetlight group.",
      "schema": "string"
    },
    {
      "@type": "Property",
      "name": "annotations",
      "schema": {
        "@type": "Array",
        "elementSchema": "string"
      }
    }
  ],
  "@context": "dtmi:dtdl:context;2"
}